{
  "project_name": "urban_heat_demo_case_a",

  "aoi_path": "demo_data/aois.geojson",
  "aoi_id_field": "aoi_id",

  "buffer_m": null,
  "aoi_crs_if_missing": "EPSG:4326",

  "raster_dir": "demo_data/rasters",
  "raster_glob": "*.tif",

  "date_regex": "(\\d{4}-\\d{2}-\\d{2})",
  "date_format": "%Y-%m-%d",

  "value_units": "celsius",
  "nodata_below": -9990,
  "nodata_equals": -9999,

  "value_transform": {
    "type": "identity"
  },

  "stats": ["mean", "median", "p90", "count"],

  "baseline": {
    "grouping": "month",
    "min_obs_per_group": 3
  },

  "outputs_dir": "outputs",
  "export_geojson_path": "../data/aoi_risk_latest.geojson"
}

